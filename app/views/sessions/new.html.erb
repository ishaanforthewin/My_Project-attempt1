
<div class="container">
  <%= stylesheet_link_tag 'sessionsnew.css' %> 
<h1> Log In </h1>
<%=flash[:message]%>
  <%= form_tag sessions_path do %> 
<div class ="field">
  
  <%= label_tag :name %> <br /> 
  <div class ="inputer"><%= text_field_tag :name, params[:name] %></div>
</div>
<div class="field">
  <%= label_tag :password %> <br /> 
  <div class ="inputer"><%= password_field_tag :password %> </div>
</div>
<div class="actions"> <%= submit_tag "Log in" %> </div>

<%end%> 
</div>