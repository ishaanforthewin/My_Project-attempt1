<!DOCTYPE html>
<html>
<head>
  <title>MyProject</title>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  
<body>
<div id ="container">
  <div id ="user_header">
   
    <% if current_user %>
    Logged in as <%=current_user.name%>.
    <%= link_to "Log out", session_path("current"), method: "delete" %>
    <% else %>
   <button type="button" class="simple-btn"><%= link_to "Sign up", new_user_path %></button> 
     <button type="button" class="simple-btn"><%= link_to "Log In", new_session_path %></button>
    <% end %>
  </div>
<%= yield %>
  </div>
</body>
</html>
